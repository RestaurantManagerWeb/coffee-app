{
  "name": "coffee-app",
  "version": "1.0.0",
  "scripts": {
    "server:config": "cd server/config-server && mvnw spring-boot:run",
    "server:eureka": "cd server/eureka-server && mvnw spring-boot:run",
    "server:outlet": "cd server/outlet && mvnw spring-boot:run",
    "server:api": "cd server/api-gateway && mvnw spring-boot:run",
    "server": "run-p -l server:eureka server:outlet server:api",
    "postinstall": "cd client && npm ci",
    "client": "cd client && npm run dev"
  },
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5"
  }
}
